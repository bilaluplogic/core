<?xml version="1.0"?>
<schema>
  <table name="dynamic_data">
    <primary>
      <column name="xar_dd_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_dd_propid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_dd_itemid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_dd_value" type="LONGVARCHAR"/>
    <index type="default" name="i_xar_dyndata_propid">
      <column name="xar_dd_propid"/>
    </index>
    <index type="default" name="i_xar_dyndata_itemid">
      <column name="xar_dd_itemid"/>
    </index>
  </table>
  <table name="dynamic_objects">
    <primary>
      <column name="xar_object_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_object_name" size="30" required="true"/>
    <column name="xar_object_label" size="254" required="true"/>
    <column name="xar_object_moduleid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_object_itemtype" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_object_parent" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_object_urlparam" size="30" default="itemid" required="true"/>
    <column name="xar_object_maxid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_object_config" type="LONGVARCHAR"/>
    <column name="xar_object_isalias" type="TINYINT" size="4" default="1" required="true"/>
    <index type="unique" name="i_xar_dynobjects_combo">
      <column name="xar_object_moduleid"/>
      <column name="xar_object_itemtype"/>
    </index>
    <index type="unique" name="i_xar_dynobjects_name">
      <column name="xar_object_name"/>
    </index>
  </table>
  <table name="dynamic_properties">
    <primary>
      <column name="xar_prop_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_prop_name" size="30" required="true"/>
    <column name="xar_prop_label" size="254" required="true"/>
    <column name="xar_prop_objectid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_prop_moduleid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_prop_itemtype" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_prop_type" type="INTEGER" size="11" required="true"/>
    <column name="xar_prop_default" size="254"/>
    <column name="xar_prop_source" size="254" default="dynamic_data" required="true"/>
    <column name="xar_prop_status" type="INTEGER" size="11" default="33" required="true"/>
    <column name="xar_prop_order" type="TINYINT" size="4" default="0" required="true"/>
    <column name="xar_prop_validation" type="LONGVARCHAR"/>
    <index type="unique" name="i_xar_dynprops_combo">
      <column name="xar_prop_moduleid"/>
      <column name="xar_prop_itemtype"/>
      <column name="xar_prop_name"/>
    </index>
    <index type="default" name="i_xar_dynprops_name">
      <column name="xar_prop_name"/>
    </index>
    <index type="default" name="i_xar_dynprops_objectid">
      <column name="xar_prop_objectid"/>
    </index>
  </table>
  <table name="dynamic_properties_def">
    <primary>
      <column name="xar_prop_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_prop_name" size="254"/>
    <column name="xar_prop_label" size="254"/>
    <column name="xar_prop_parent" size="254"/>
    <column name="xar_prop_filepath" size="254"/>
    <column name="xar_prop_class" size="254"/>
    <column name="xar_prop_validation" size="254"/>
    <column name="xar_prop_source" size="254"/>
    <column name="xar_prop_reqfiles" size="254"/>
    <column name="xar_prop_reqmodules" size="254"/>
    <column name="xar_prop_args" type="LONGVARCHAR"/>
    <column name="xar_prop_aliases" size="254"/>
    <column name="xar_prop_format" type="INTEGER" size="11" default="0"/>
    <index type="default" name="i_xar_dynpropdef_mod">
      <column name="xar_prop_reqmodules"/>
    </index>
  </table>
  <table name="dynamic_relations">
    <primary>
      <column name="xar_relation_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_relation_todo" type="INTEGER" size="11" default="0" required="true"/>
  </table>
</schema>
