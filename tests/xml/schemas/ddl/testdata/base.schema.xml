<?xml version="1.0"?>
<schema>
  <table name="template_tags">
    <primary>
      <column name="xar_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_name" size="255" required="true"/>
    <column name="xar_modid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_handler" size="255" required="true"/>
    <column name="xar_data" type="LONGVARCHAR" size=""/>
  </table>
  <table name="session_info">
    <primary>
      <column name="xar_sessid" size="32" required="true"/>
    </primary>
    <column name="xar_ipaddr" size="20" required="true"/>
    <column name="xar_firstused" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_lastused" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_uid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_vars" type="VARBINARY" />
    <column name="xar_remembersess" type="TINYINT" size="4" default="0" />
    <index type="default" name="i_xar_session_uid">
      <column name="xar_uid"/>
    </index>
    <index type="default" name="i_xar_session_lastused">
      <column name="xar_lastused"/>
    </index>
  </table>
  <table name="module_vars">
    <primary>
      <column name="xar_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_modid" type="INTEGER" size="11" required="true"/>
    <column name="xar_name" size="64" required="true"/>
    <column name="xar_value" type="LONGVARCHAR"/>
    <index type="unique" name="i_xar_config_name">
      <column name="xar_name"/>
      <column name="xar_modid"/>
    </index>
    <index type="default" name="i_xar_module_vars_modid">
      <column name="xar_modid"/>
    </index>
    <index type="default" name="i_xar_module_vars_name">
      <column name="xar_name"/>
    </index>
  </table>
</schema>
