<?xml version="1.0"?>
<schema>
  <table name="hooks">
    <primary>
      <column name="xar_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_object" size="64" required="true"/>
    <column name="xar_action" size="64" required="true"/>
    <column name="xar_smodid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_stype" size="64" required="true"/>
    <column name="xar_tarea" size="64" required="true"/>
    <column name="xar_tmodid" type="INTEGER" size="11" default="0" required="true"/>
    <column name="xar_ttype" size="64" required="true"/>
    <column name="xar_tfunc" size="64" required="true"/>
    <column name="xar_order" type="INTEGER" size="11" default="0" required="true"/>
  </table>
  <table name="module_itemvars">
    <primary>
      <column name="xar_mvid" type="INTEGER" size="11" required="true"/>
      <column name="xar_itemid" type="INTEGER" size="10" required="true"/>
    </primary>
    <column name="xar_value" type="LONGVARCHAR"/>
  </table>

  <table name="modules">
    <primary>
      <column name="xar_id" type="INTEGER" size="11" required="true" autoincrement="true"/>
    </primary>
    <column name="xar_name" size="64" required="true"/>
    <column name="xar_regid" type="INTEGER" size="10" default="0" required="true"/>
    <column name="xar_directory" size="64" required="true"/>
    <column name="xar_version" size="10" required="true"/>
    <column name="xar_mode" type="SMALLINT" size="6" default="1" required="true"/>
    <column name="xar_class" size="64" required="true"/>
    <column name="xar_category" size="64" required="true"/>
    <column name="xar_admin_capable" type="TINYINT" size="4" default="0" required="true"/>
    <column name="xar_user_capable" type="TINYINT" size="4" default="0" required="true"/>
    <column name="xar_state" type="INTEGER" size="11" default="1" required="true"/>
  </table>
</schema>
