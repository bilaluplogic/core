<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:set name="siteslogan"><xar:var scope="module" module="themes" name="SiteSlogan" /></xar:set>
<div id="xc-header">
    <h1>
        <a href="&xar-baseurl;" title="#$sitename#">
            <span>#$sitename#</span>
        </a>
    </h1>
    <p id="xc-slogan">
        <xar:var name="siteslogan" />
    </p>
</div>
</xar:template>
