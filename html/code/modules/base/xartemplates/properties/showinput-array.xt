<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:set name="info">xarController::$request->getInfo()</xar:set>
    <div class="xar-clearboth">
        <xar:if condition="$info[2] eq 'showpropval'">
            <!-- We are configuring an array property -->
            <xar:template file="array_configuration"/>
        <xar:else/>
            <!-- We are displaying an array property -->
            <xar:template file="array_table"/>
        </xar:if >
        <br class="xar-clearall"/>
        <xar:template file="dataproperty_additions" module="base"/>        
    </div>
</xar:template>