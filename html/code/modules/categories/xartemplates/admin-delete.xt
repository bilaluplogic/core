<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:style scope="module" file="forms"/>
    <div class="xar-mod-head">
        <span class="xar-mod-title">
            <xar:mlstring>
                Categories Administration
            </xar:mlstring>
        </span>
    </div>
    <div class="xar-mod-body">
       <xar:template type="module" file="admin-menu"/>
        <h2>
            <xar:mlstring>
                Delete Category
            </xar:mlstring>
        </h2>
        <form class="xar-formwidget" action="#xarModURL('categories','admin','deletecat')#" method="post"  enctype="application/x-www-form-urlencoded">
            <fieldset>
                <legend>
                    <strong>
                        <xar:ml>
                            <xar:mlstring>
                                Delete category '#(1)'?
                            </xar:mlstring>
                            <xar:mlvar>
                                #$name#
                            </xar:mlvar>
                        </xar:ml>
                    </strong>
                </legend>
                <input type="hidden" name="ok" id="ok" value="1"/>
                <input type="hidden" name="cid" id="cid" value="#$cid#"/>
                <input type="hidden" name="authid" id="authid" value="#$authkey#"/>
                <div>
                    <xar:ml>
                        <xar:mlstring>This category has #(1) sub-categories and #(2) module items assigned to them.</xar:mlstring>
                        <xar:mlvar>#$numcats#</xar:mlvar>
                        <xar:mlvar>#$numitems#</xar:mlvar>
                    </xar:ml>
                </div>
                <div>
                    <input type="submit" name="confirm" id="confirmyes" value="#xarML('Delete')#"/>
                    &#160;
                    <input type="reset" value="#xarML('Cancel')#" onclick="javascript:history.go(-1)"/>
                </div>
            </fieldset>
        </form>
    </div>
</xar:template>