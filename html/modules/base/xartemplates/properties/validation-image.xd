<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:set name="options">array( array('id' =&gt; 'local', 'name' =&gt; 'local location'),
    array('id' =&gt; 'url', 'name' =&gt; 'url'), array('id' =&gt; 'upload', 'name' =&gt; 'file
    upload'), )</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$id#_inputtype" title="#xarML('Where the source of the image is.')#"
        class="xar-form-label">Input type</label>
        <xar:set name="inputtypename">$name . "[inputtype]"</xar:set>
        <xar:data-input type="radio" name="$inputtypename" id="#$id#_inputtype" options="$options"
        value="$inputtype" />
    </div>
    <div class="xar-form-input-wrapper">
    <label for="#$id#_basedir"
    title="#xarML('The local directory where images are placed or looked for')#"
    class="xar-form-label">Base Directory</label>
    <input type="text" name="#$name#[basedir]" id="#$id#_basedir" value="#$basedir#" size="#$size#"
    tabindex="#$tabindex#" />&#160; only needed if input type is not 'url' 
    <br />Note : {theme} will be replaced by the current theme directory - e.g. {theme}/images
    -&gt; themes/Xaraya_Classic/images</div>
    <div class="xar-form-input-wrapper">
        <label for="#$id#_extensions" title="#xarML('Which file extensions will be allowed.')#"
        class="xar-form-label">Valid extensions</label>
        <input type="text" name="#$name#[extensions]" id="#$id#_extensions" value="#$extensions#"
        size="#$size#" tabindex="#$tabindex#" />
    </div>
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
