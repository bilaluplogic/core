<xar:set name="alttext"><xar:mlstring>Click Here to select a color</xar:mlstring></xar:set>
<xar:set name="pickerimage">xarTplGetImage('tcolorpicker.gif', 'base')</xar:set>

<input type="text" name="#$name#" id="#$id#" value="#$value#" size="#$size#" maxlength="#$maxlength#" />

<a href="javascript:TCP.popup(document.getElementById('#$id#'), 1)">
<img src="#$pickerimage#" style="border: 0px none;" alt="#$alttext#" /></a>

    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>

