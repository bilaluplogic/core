<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:if condition="$srcpath ne ''">
        <xar:comment>
            <xar:set name="size">getimagesize($basedir.'/'.$value)</xar:set>
            <img src="#$baseurl#/#$value#" width="#$size[0]#" height="#$size[1]#" alt="#$value#" />
        </xar:comment>
        <img src="#$baseurl#/#$value#" alt="" />
    </xar:if>
</xar:template>
