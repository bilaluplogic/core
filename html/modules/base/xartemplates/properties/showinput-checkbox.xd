<xar:if condition="$checked">
  <input type="checkbox"  name="#$name#" value="1" id="#$id#" tabindex="#$tabindex#" checked="checked" />
<xar:else/>
  <input type="checkbox"  name="#$name#" value="1" id="#$id#" tabindex="#$tabindex#" />
</xar:if>

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
