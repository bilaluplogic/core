<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:set name="fieldname">$name . '[min]'</xar:set>
    <xar:set name="fieldid">$id . '_min'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('The minimum length for this field')#"
        class="xar-form-label">Minimum length</label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$min" size="4"
        tabindex="$tabindex" />
    </div>
    <xar:set name="fieldname">$name . '[max]'</xar:set>
    <xar:set name="fieldid">$id . '_max'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('The maximum length for this field')#"
        class="xar-form-label">Maximum length</label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$max" size="4"
        tabindex="$tabindex" />
    </div>
    <xar:set name="fieldname">$name . '[max]'</xar:set>
    <xar:set name="fieldid">$id . '_max'</xar:set>
    <div class="xar-form-input-wrapper">
    <label for="#$fieldname#"
    title="#xarML('A regex the contents of this field must validate against')#"
    class="xar-form-label">Regular expression</label>
    <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$regex"
    tabindex="$tabindex" />&#160; PCRE syntax, e.g. /^[A-Z]+\d*$/</div>
    <xar:set name="fieldname">$name . '[other]'</xar:set>
    <xar:set name="fieldid">$id . '_other'</xar:set>
    <div class="xar-form-input-wrapper">
    <label for="#$fieldname#" title="#xarML('Any other rule for this field')#"
    class="xar-form-label">Other rule</label>
    <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$regex"
    tabindex="$tabindex" />&#160;</div>
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
