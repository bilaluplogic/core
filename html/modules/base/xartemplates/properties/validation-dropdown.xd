<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <table class="xar-norm">
        <tr>
            <td>Predefined</td>
            <td>
            <xar:if condition="empty($static)">
                <xar:set name="static">0</xar:set>
            </xar:if>#$static# options</td>
            <td></td>
        </tr>
        <tr>
            <td>Function</td>
            <td>
                <input type="text" name="#$name#[func]" id="#$id#_func" value="#$func#"
                size="40" />
            </td>
            <td>Get a list of id =&gt; name options via API function call 
            <br />Syntax : xarModAPIFunc(...)</td>
        </tr>
        <xar:if condition="!empty($func)">
            <tr>
                <td>Function</td>
                <td>
                    <input type="text" name="#$name#[itemfunc]" id="#$id#_itemfunc"
                    value="#$itemfunc#" size="40" />
                </td>
                <td>Get/check a single option with id = $value via API 
                <br />Syntax : xarModAPIFunc(..., array(... =&gt; $value))</td>
            </tr>
        </xar:if>
        <tr>
            <td>File</td>
            <td>
                <input type="text" name="#$name#[file]" id="#$id#_file" value="#$file#"
                size="40" />
            </td>
            <td>File containing options name1;name2;name3 or id1,name1;id2,name2;id3,name3</td>
        </tr>
        <tr>
            <td>Options</td>
            <td>
                <xar:set name="idx">0</xar:set>
                <xar:foreach in="$options" value="$option">
                    <xar:if condition="$option['id'] ne $option['name']">
                        <input type="text" name="#$name#[options][#$idx#][id]"
                        id="#$id#_options_#$idx#_id" value="#$option['id']#" size="5" />
                        <input type="text" name="#$name#[options][#$idx#][name]"
                        id="#$id#_options_#$idx#_name" value="#$option['name']#" size="30" />
                        <xar:else />
                        <input type="text" name="#$name#[options][#$idx#][name]"
                        id="#$id#_options_#$idx#_id" value="#$option['name']#" size="40" />
                    </xar:if>
                    <xar:set name="idx">$idx+1</xar:set>
                    <br />
                </xar:foreach>
                <input type="text" name="#$name#[options][#$idx#][id]" id="#$id#_options_#$idx#_id"
                value="" size="5" />
                <input type="text" name="#$name#[options][#$idx#][name]"
                id="#$id#_options_#$idx#_name" value="" size="30" />
            </td>
            <td>Specify your own id =&gt; name options here</td>
        </tr>
        <tr>
            <td>Override</td>
            <td>
                <xar:set name="overridename">$name . "[override]"</xar:set>
                <xar:data-input type="checkbox" name="$overridename" checked="$override" />
            </td>
            <td></td>
        </tr>
        <tr>
            <td>Other rule</td>
            <td colspan="2">
                <input type="text" name="#$name#[other]" id="#$id#_other" value="#$other#"
                size="40" />
            </td>
        </tr>
    </table>
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
