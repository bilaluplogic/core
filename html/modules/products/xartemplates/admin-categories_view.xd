													<a href="#xarModURL('products','admin','categories', array('cPath' =>$cPath_back, 'cID' => $current_category_id))#">
														<img src="#xarTplGetImage($language .'/admin/buttons/button_back.gif','commerce')#" alt="#xarML('Back')#">
