<form action="#$form_action#" method="post">
    <select name="#$form_picker_name#">
        <xar:loop name="$locales">
            <xar:if condition="$selected">
                <option value="#$locale#" selected>
            <xar:else/>
                <option value="#$locale#">
            </xar:if>
            #$name# (#$country#)</option>
        </xar:loop>
    </select>
    <input type="submit" name="change_language" value="OK"/>
</form>
