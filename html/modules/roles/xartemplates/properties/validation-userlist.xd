<?xml version="1.0"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <table class="xar-norm">
        <tr>
            <td>Groups</td>
            <td>
                <!-- TODO: replace with dropdown / multi-select list of groups + adapt code ? -->
                <input type="text" name="#$name#[grouplist]" id="#$id#_grouplist"
                value="#$grouplist#" size="#$size#" tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>State</td>
            <td>
                <!-- TODO: replace with dropdown / multi-select list of states + adapt code ? -->
                <input type="text" name="#$name#[userstate]" id="#$id#_userstate"
                value="#$userstate#" size="5" tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>Fields</td>
            <td>
                <!-- TODO: replace with dropdown / multi-select list of fields + adapt code ? -->
                <input type="text" name="#$name#[showlist]" id="#$id#_showlist" value="#$showlist#"
                size="#$size#" tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>Order</td>
            <td>
                <!-- TODO: replace with dropdown / multi-select list of fields + adapt code ? -->
                <input type="text" name="#$name#[orderlist]" id="#$id#_orderlist"
                value="#$orderlist#" size="#$size#" tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>Glue</td>
            <td>
                <input type="text" name="#$name#[showglue]" id="#$id#_showglue" value="#$showglue#"
                size="5" tabindex="#$tabindex#" />
            </td>
        </tr>
        <tr>
            <td>Other rule</td>
            <td>
                <input type="text" name="#$name#[other]" id="#$id#_other" value="#$other#"
                size="#$size#" tabindex="#$tabindex#" />
            </td>
        </tr>
    </table>
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
