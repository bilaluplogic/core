<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <!-- License: GPL http://www.gnu.org/copyleft/gpl.html -->
    <xar:set name="fieldname">$name . '[confirm]'</xar:set>
    <xar:set name="fieldid">$id . '_confirm'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('Show a second password field to be filled in')#" class="xar-form-label">
            <xar:mlstring>
                Require confirmation
            </xar:mlstring>
        </label>
        <xar:data-input type="checkbox" name="$fieldname" id="$fieldid" checked="$confirm" />
    </div>

    <xar:set name="fieldname">$name . '[min]'</xar:set>
    <xar:set name="fieldid">$id . '_min'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('The minimum length for this field')#" class="xar-form-label">
            <xar:mlstring>
                Minimum length
            </xar:mlstring>
        </label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$min" size="4" tabindex="$tabindex" />
    </div>
    
    <xar:set name="fieldname">$name . '[max]'</xar:set>
    <xar:set name="fieldid">$id . '_max'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('The maximum length for this field')#" class="xar-form-label">
            <xar:mlstring>
                Maximum length
            </xar:mlstring>
        </label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$max" size="4" tabindex="$tabindex" />
    </div>
    
    <xar:set name="fieldname">$name . '[regex]'</xar:set>
    <xar:set name="fieldid">$id . '_regex'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('A regex the contents of this field must validate against')#" class="xar-form-label">
            <xar:mlstring>
                Regular expression
            </xar:mlstring>
        </label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$regex" tabindex="$tabindex" />&#160;
        <xar:mlstring>PCRE syntax, e.g. /^[A-Z]+\d*$/</xar:mlstring>
    </div>
    
    <xar:set name="fieldname">$name . '[other]'</xar:set>
    <xar:set name="fieldid">$id . '_other'</xar:set>
    <div class="xar-form-input-wrapper">
        <label for="#$fieldname#" title="#xarML('Any other rule for this field')#" class="xar-form-label">
            <xar:mlstring>
                Other rule
            </xar:mlstring>
        </label>
        <xar:data-input type="textbox" name="$fieldname" id="$fieldid" value="$regex" tabindex="$tabindex" />&#160;
    </div>
    
    <xar:if condition="!empty($invalid)">
        <span class="xar-error">#$invalid#</span>
    </xar:if>
</xar:template>
