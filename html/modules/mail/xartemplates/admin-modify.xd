<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
<xar:template file="mod-head"/>

  <fieldset>
      <legend>Change queue definition</legend>
      
      <xar:comment>Normal edit form</xar:comment>
      <form style="display: inline;" method="post" action="&xar-modurl-dynamicdata-admin-update;">
        <xar:data-form object="$object" itemid="$itemid" linkfield="name" />
        <input type="hidden" name="authid" value="#xarSecGenAuthKey('dynamicdata')#" />
        <input type="hidden" name="itemid" value="#$itemid#" />
        <input type="hidden" name="objectid" value="#$object:objectid#"/>
        <input type="hidden" name="modid" value="#$object:moduleid#"/>
        <input type="hidden" name="return_url" value="&xar-modurl-mail-admin-view;" />
        <input type="hidden" name="itemtype" value="#$object:itemtype#"/>
        <input type="submit" value="#xarML('Save')#"/>
      </form>

      <xar:comment>When editting, offer delete option</xar:comment>
      <form style="display: inline;" method="post" action="&xar-modurl-mail-admin-delete;">
        <input type="hidden" name="authid" value="#xarSecGenAuthKey()#"/>
        <input type="hidden" name="itemid" value="#$itemid#"/>
        <input type="hidden" name="objectid" value="#$object:objectid#"/>
        <input type="submit" value="#xarML('Delete')#"/>
      </form>
  </fieldset>
</xar:template>
