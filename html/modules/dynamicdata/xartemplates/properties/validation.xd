<table class="xar-norm">
  <tr>
    <td colspan="2">
      <span class="xar-error"><xar:mlstring>Warning: the template validation-[property type].xd or validation-[template].xd is missing for this property !</xar:mlstring></span>
    </td>
  </tr>
  <tr>
    <td>
      <xar:mlstring>Rule</xar:mlstring>
    </td>
    <td>
      <xar:if condition="!isset($value)">
         <xar:if condition="isset($validation)">
           <xar:set name="value">$validation</xar:set>
         <xar:elseif condition="isset($other)"/>
           <xar:set name="value">$other</xar:set>
         <xar:else/>
           <xar:set name="value">''</xar:set>
         </xar:if>
      </xar:if>
      <input type="text" name="#$name#" id="#$id#" value="#$value#" size="50" tabindex="#$tabindex#" />
    </td>
  </tr>
</table>

<xar:if condition="!empty($invalid)">
    <span class="xar-error">#$invalid#</span>
</xar:if>
