<xar:foreach in="$properties" key="$name" value="$property">
  <div style="margin: 5pt;">
    <div style="float:left; min-width: 100px">
    <span><xar:data-label property="$properties[$name]" /></span>
    </div>
    <span><xar:data-input property="$properties[$name]" /></span>
  </div>
</xar:foreach>

