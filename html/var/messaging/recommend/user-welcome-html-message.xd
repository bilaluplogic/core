<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">   
    <p>
    <xar:ml>
        <xar:mlstring>
            Hello #(1),
        </xar:mlstring>
        <xar:mlvar>#$friendname#</xar:mlvar>
    </xar:ml>        
    </p>	    
    <p>    
    <xar:ml> 	  
	  <xar:mlstring>
            Your friend #(1) considered a page at our site interesting and wanted to send it to you.
        </xar:mlstring>
        <xar:mlvar>#$username#</xar:mlvar>
    </xar:ml>
    </p> 
    <p>
    <table border="1" width="100%">
	<tr>
		<td> Site Name: </td> <td> #$sitename# </td>
	</tr>
	<tr>	
		<td> Site URL: </td> <td> <a href ="#$siteurl#"> #$siteurl# </a> </td>
	</tr>
    </table>
    </p>
    <xar:if condition="!empty($usermessage)">
        <p>
            Your friend also wanted to say:<br />
            #$usermessage#
        </p>
    </xar:if>        
</xar:template>